<div class="container">
  <h1 class="title">EAT-DA-BURGER</h1>


  <div class="row">
    <div class="col col-sm-6 col-lg-6">
      <h2>Burgers ready to be eaten</h2>
      <ul>
        {{#each burger}}
        {{#unless devoured}}
        <li class="burger-not-devoured">
          {{id}} {{burger_name}}

          <button class="devour-burger button blue" data-id="{{id}}">EAT DA BURGER</button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col col-sm-6 col-lg-6">
      <h2 class="burger-devour">Burgers that have been eaten</h2>

      <ul>
        {{#each burger}}
        {{#if devoured}}
        <li class="burger-devoured" data-id="{{id}}">
          {{burger_name}}
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <h2>Add a Burger</h2>
  <form class="create-form">
    <div class="form-group">
      <label for="burgers">Burger Name:</label>
      <input type="text" id="burgers" name="name">
    </div>
    <button class="create-burger button green" type="submit">Add Burger!</button>
  </form>
</div>