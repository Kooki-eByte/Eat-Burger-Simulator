<h1>EAT-DA-BURGER</h1>

<h2>Burgers ready to be eaten</h2>

<ul>
  {{#each burger}}
  {{#unless devoured}}
  <li class="" data-id="{{id}}" data-devoured="false">
    {{burger_name}}

    <button class="delete-burger" data-id="{{this.id}}">EAT DA BURGER</button>
  </li>
  {{/unless}}
  {{/each}}
</ul>

<h2 class="burger-devour">Burgers that have been eaten</h2>

<ul>
  {{#each burger}}
  {{#if devoured}}
  <li class="burger-devour" data-id="{{id}}" data-devoured="true">
    {{burger_name}}
  </li>
  {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">
  <div class="form-group">
    <label for="burgers">Burger Name:</label>
    <input type="text" id="burgers" name="name">
  </div>
  <button type="submit">Add Burger!</button>
</form>